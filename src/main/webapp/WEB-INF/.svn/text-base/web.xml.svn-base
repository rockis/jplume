<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>Collapsar NTA Web Application</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:com/nsfocus/application/cfa/web/applicationContext.xml
			</param-value>
	</context-param>
	<filter>
		<filter-name>FreemarkerRequestFilter</filter-name>
		<filter-class>
			com.nsfocus.platform.web.freemarker.FreemarkerRequestFilter</filter-class>
	</filter>
	<filter>
		<filter-name>Acegi Filter Chain Proxy</filter-name>
		<filter-class>net.sf.acegisecurity.util.FilterToBeanProxy</filter-class>
		<init-param>
			<param-name>targetClass</param-name>
			<param-value>
				net.sf.acegisecurity.util.FilterChainProxy</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Acegi Filter Chain Proxy</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>FreemarkerRequestFilter</filter-name>
		<url-pattern>*.fhtml</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>
			com.nsfocus.platform.util.container.spring.ContainerContextListener
			</listener-class>
	</listener>
	<listener>
		<listener-class>
			net.sf.acegisecurity.ui.session.HttpSessionEventPublisher</listener-class>
	</listener>
	
	<listener>
		<listener-class>
			com.nsfocus.platform.web.freemarker.FreemarkerConfigListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>DisplayChart</servlet-name>
		<servlet-class>com.nsfocus.application.cfa.web.servlets.DisplayChartServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>webwork</servlet-name>
		<servlet-class>
			com.opensymphony.webwork.dispatcher.ServletDispatcher</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>ReportExport</servlet-name>
		<servlet-class>
			com.nsfocus.application.cfa.web.servlets.ReportExportServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>ValidateIPRangeServlet</servlet-name>
		<servlet-class>
			com.nsfocus.application.cfa.web.servlets.ValidateIPRangeServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ValidateIPRangeServlet</servlet-name>
		<url-pattern>/servlet/checkiprange</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ReportExport</servlet-name>
		<url-pattern>/servlet/ReportExport</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>DisplayChart</servlet-name>
		<url-pattern>/servlet/chart/temp</url-pattern>
	</servlet-mapping>	
	
	<servlet-mapping>
		<servlet-name>DisplayChart</servlet-name>
		<url-pattern>/servlet/chart/persistent</url-pattern>
	</servlet-mapping>	

	<servlet-mapping>
		<servlet-name>webwork</servlet-name>
		<url-pattern>*.action</url-pattern>
	</servlet-mapping>
	
	<error-page>
		<error-code>404</error-code>
		<location>/misc/error/404.html</location>
	</error-page>
	<error-page>
		<error-code>400</error-code>
		<location>/misc/error/400.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/misc/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/misc/error/503.html</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/misc/error/500.html</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.NullPointerException</exception-type>
		<location>/misc/error/500.html</location>
	</error-page>
</web-app>